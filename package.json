{
	"name": "cro-website",
	"version": "0.0.1",
	"license": "GPL-3.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev:only": "vite dev --host",
		"build:only": "vite build",
		"tailwind:watch": "cross-env TAILWIND_MODE=watch cross-env NODE_ENV=development postcss src/app.css -o src/lib/assets/styles/tailwind-output.css -w",
		"tailwind:build": "cross-env TAILWIND_MODE=build cross-env NODE_ENV=production postcss src/app.css -o src/lib/assets/styles/tailwind-output.css",
		"dev": "concurrently \"npm run dev:only\" \"npm run tailwind:watch\"",
		"build": "npm run tailwind:build && npm run build:only",
		"preview": "vite preview",
		"test": "npx playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@playwright/test": "1.51.1",
		"@sveltejs/adapter-cloudflare": "^7.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/svelte-virtual-list": "^3.0.1",
		"@svitejs/svelte-preprocess-svg": "^2.0.0",
		"@typescript-eslint/eslint-plugin": "^8.0.0",
		"@typescript-eslint/parser": "^8.0.0",
		"autoprefixer": "^10.4.13",
		"concurrently": "^9.0.0",
		"cross-env": "^7.0.3",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte3": "^4.0.0",
		"postcss": "^8.4.21",
		"postcss-cli": "^11.0.0",
		"prettier": "^3.0.0",
		"prettier-plugin-svelte": "^3.0.0",
		"svelte": "^5.2.10",
		"svelte-check": "^4.0.0",
		"svelte-preprocess": "^6.0.0",
		"svgo": "^3.0.2",
		"swiper": "^11.0.1",
		"tailwind-clip-path": "^1.0.0",
		"tailwind-scrollbar": "^4.0.0",
		"tailwindcss": "^4.0.1",
		"tslib": "^2.5.0",
		"typescript": "^5.0.2",
		"vite": "^6.0.1"
	},
	"dependencies": {
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/typography": "^0.5.9",
		"animate.css": "^4.1.1",
		"daisyui": "^5.0.0",
		"nprogress": "^0.2.0",
		"playwright-e2e-coverage-report": "^1.0.28",
		"theme-change": "^2.5.0"
	}
}
